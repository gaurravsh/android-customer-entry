<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/center_guideline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#FFD740"
            android:paddingHorizontal="30dp"
            android:text="@string/appTitle"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/customerNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="@string/customerName"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appTitle" />

        <EditText
            android:id="@+id/customerNameField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="Customer Name"
            android:ems="10"
            android:hint="@string/customer_name_hint"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:singleLine="true"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/customerNameLabel"
            app:layout_constraintStart_toEndOf="@id/center_guideline" />

        <TextView
            android:id="@+id/visitTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Visit Type"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/customerNameLabel"
            app:layout_constraintTop_toBottomOf="@+id/customerNameLabel" />

        <Spinner
            android:id="@+id/spinner_visit_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Visit Type"
            android:entries="@array/visit_type_array"
            android:minHeight="48dp"
            android:visibility="visible"
            app:layout_constraintBaseline_toBaselineOf="@id/visitTypeLabel"
            app:layout_constraintStart_toEndOf="@id/center_guideline" />

        <TextView
            android:id="@+id/customerAreaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="Area"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/visitTypeLabel"
            app:layout_constraintTop_toTopOf="@id/visitTypeLabel" />

        <EditText
            android:id="@+id/customerAreaField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Customer Area"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@id/customerAreaLabel"
            app:layout_constraintStart_toEndOf="@id/center_guideline" />

        <TextView
            android:id="@+id/pincodeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="Pin Code"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/customerAreaLabel"
            app:layout_constraintTop_toTopOf="@id/customerAreaLabel" />

        <EditText
            android:id="@+id/pincodeField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Pin Code"
            android:inputType="number"
            android:minHeight="48dp"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@id/pincodeLabel"
            app:layout_constraintStart_toEndOf="@id/center_guideline" />

        <TextView
            android:id="@+id/contactNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="Contact Number"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/pincodeLabel"
            app:layout_constraintTop_toTopOf="@id/pincodeLabel" />

        <EditText
            android:id="@+id/contactNumberField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter WITHOUT +91"
            android:inputType="phone"
            android:minHeight="48dp"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@id/contactNumberLabel"
            app:layout_constraintStart_toEndOf="@id/center_guideline" />

        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="Email"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/contactNumberLabel"
            app:layout_constraintTop_toTopOf="@id/contactNumberLabel" />

        <EditText
            android:id="@+id/emailField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@id/emailLabel"
            app:layout_constraintStart_toEndOf="@id/center_guideline" />

        <TextView
            android:id="@+id/phoneNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="Phone Number"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/emailLabel"
            app:layout_constraintTop_toTopOf="@id/emailLabel" />

        <EditText
            android:id="@+id/phoneNumberField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="Phone Number"
            android:ems="10"
            android:hint="Enter WITHOUT +91"
            android:inputType="phone"
            android:minHeight="48dp"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@id/phoneNumberLabel"
            app:layout_constraintStart_toEndOf="@id/center_guideline" />

        <TextView
            android:id="@+id/amcLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="52dp"
            android:text="AMC"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/phoneNumberLabel" />

        <RadioGroup
            android:id="@+id/amdGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/center_guideline"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumberField">


            <RadioButton
                android:id="@+id/amcYes"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Yes"
                app:layout_constraintStart_toStartOf="@id/appTitle"
                app:layout_constraintTop_toTopOf="@id/phoneNumberField" />

            <RadioButton
                android:id="@+id/amcNo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="No"
                app:layout_constraintStart_toStartOf="@id/amcYes"
                app:layout_constraintTop_toTopOf="@id/phoneNumberField" />
        </RadioGroup>

        <TextView
            android:id="@+id/customerTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="52dp"
            android:text="Customer Type"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/amcLabel" />

        <EditText
            android:id="@+id/customerTypeField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="Customer Type"
            android:ems="10"
            android:hint="Customer Type"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:singleLine="true"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/customerTypeLabel"
            app:layout_constraintStart_toEndOf="@id/center_guideline" />

        <TextView
            android:id="@+id/companyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="52dp"
            android:text="Company"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/customerTypeLabel" />

        <EditText
            android:id="@+id/companyField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="Customer Type"
            android:ems="10"
            android:hint="Company"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:singleLine="true"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/companyLabel"
            app:layout_constraintStart_toEndOf="@id/center_guideline" />

        <TextView
            android:id="@+id/modelLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="52dp"
            android:text="Model"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/companyLabel" />

        <EditText
            android:id="@+id/modelField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="Customer Type"
            android:ems="10"
            android:hint="Vehicle Model"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:singleLine="true"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/modelLabel"
            app:layout_constraintStart_toEndOf="@id/center_guideline" />

        <TextView
            android:id="@+id/colorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="52dp"
            android:text="Color"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/modelLabel" />

        <EditText
            android:id="@+id/colorField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="Customer Type"
            android:ems="10"
            android:hint="Vehicle Color"
            android:inputType="textPersonName|textAutoCorrect"
            android:minHeight="48dp"
            android:singleLine="true"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/colorLabel"
            app:layout_constraintStart_toEndOf="@id/center_guideline" />

        <TextView
            android:id="@+id/bikeNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="52dp"
            android:text="Bike Number"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/colorLabel" />

        <EditText
            android:id="@+id/bikeNumberField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="Customer Type"
            android:ems="10"
            android:hint="Bike Number"
            android:inputType="text"
            android:minHeight="48dp"
            android:singleLine="true"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/bikeNumberLabel"
            app:layout_constraintStart_toEndOf="@id/center_guideline" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal|bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>